#! bin/wsh

func unavailable percent { 24*360*(1-percent) }

func availabilityTable arg {
    (concat "Number of hours in a year: " 24*360)
    (for period (("Days" 1/24) ("Hours" 1) ("Minutes" 60)) {
	     for percent (.99 .995 .999 .9999) {
		     progn (unit=nth(0 period)) (divisor=nth(1 period)) (concat  unit " unavailable per year at " percent "% = " round2(unavailable(percent)/divisor))
		}
	    })

}


availabilityTable(1)
